          <div className="modal-content" onClick={(e) => e.stopPropagation()}>
            <div className="modal-header">
              <h2>{editingExam ? 'S·ª≠a ƒê·ªÅ thi' : 'Th√™m ƒê·ªÅ thi m·ªõi'}</h2>
              <button className="close-btn" onClick={handleCloseExamModal}>√ó</button>
