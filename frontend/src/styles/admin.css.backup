/* Admin Management Pages Styles */
/* NOTE: This file now coexists with Tailwind component layers in admin.tw.css.
   Keep legacy class aliases here for backward compatibility. */

/* ===== Aliases for ExamEssaysPage plain classes ===== */
.container { padding: 24px; }
.page-header { margin-bottom: 16px; }
.page-header h1 { font-size: 24px; font-weight: 700; color: #0f172a; }

.tabs { display: flex; gap: 8px; margin-bottom: 16px; }
.tab-button { 
  padding: 8px 14px; border: 1px solid #e2e8f0; border-radius: 6px; background: #fff; 
  cursor: pointer; font-weight: 600; color: #475569; transition: background .2s, color .2s, transform .1s;
}
.tab-button:hover { background: #f8fafc; transform: translateY(-1px); }
.tab-button.active { background: #4f46e5; color: #fff; border-color: #4f46e5; }

.toolbar { display: flex; align-items: center; gap: 12px; margin-bottom: 16px; }
.search-box input,
.search-box select { 
  padding: 10px 14px; border: 2px solid #e2e8f0; border-radius: 8px; 
  outline: none; transition: box-shadow .2s,border-color .2s; background: #fff;
}
.search-box input:focus,
.search-box select:focus { border-color: #6366f1; box-shadow: 0 0 0 3px rgba(99,102,241,.12); }

.data-table { width: 100%; border-collapse: collapse; background: #fff; border: 1px solid #e2e8f0; border-radius: 12px; overflow: hidden; }
.data-table thead { background: #f1f5f9; }
.data-table th { padding: 14px 10px; text-align: left; font-weight: 700; color: #475569; border-bottom: 2px solid #e2e8f0; font-size: 12px; letter-spacing: .5px; text-transform: uppercase; }
.data-table td { padding: 14px 10px; border-bottom: 1px solid #f1f5f9; color: #334155; }
.data-table tbody tr:hover { background: #f8fafc; }

.btn { padding: 10px 16px; border-radius: 6px; font-weight: 600; border: none; cursor: pointer; }
.btn-primary { background: linear-gradient(135deg,#6366f1 0%,#7c3aed 100%); color: #fff; }
.btn-secondary { background: #475569; color: #fff; }

.btn-icon { background: transparent; border: none; cursor: pointer; font-size: 16px; padding: 6px 8px; border-radius: 6px; }
.btn-icon:hover { background: #f1f5f9; }

.badge { display: inline-block; padding: 6px 10px; border-radius: 9999px; font-size: 12px; font-weight: 700; }
.badge-success { background: #10b981; color: #fff; }
.badge-danger { background: #ef4444; color: #fff; }

.pagination { margin-top: 12px; display: flex; gap: 6px; }
.page-btn { padding: 8px 12px; border: 1px solid #e2e8f0; background: #fff; border-radius: 6px; cursor: pointer; }
.page-btn.active { background: #4f46e5; color: #fff; border-color: #4f46e5; }

.loading { padding: 24px; color: #64748b; }

/* Container vÃ  Layout */
.admin-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 24px;
  background-color: #f8fafc;
  min-height: 100vh;
}

.admin-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32px;
  padding: 24px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.admin-title {
  color: white;
  font-size: 28px;
  font-weight: 700;
  margin: 0;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.admin-add-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  padding: 12px 24px;
  border-radius: 8px;
  font-weight: 600;
  font-size: 16px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(79, 172, 254, 0.4);
}

.admin-add-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(79, 172, 254, 0.6);
}

/* Tab Buttons */
.admin-tab-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.3);
  padding: 8px 16px;
  border-radius: 6px;
  font-weight: 500;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.admin-tab-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: translateY(-1px);
}

.admin-tab-btn.active {
  background: rgba(255, 255, 255, 0.9);
  color: #667eea;
  font-weight: 600;
}

/* Search Bar */
.admin-search {
  margin-bottom: 24px;
}

.admin-search-input {
  width: 100%;
  max-width: 400px;
  padding: 12px 16px;
  border: 2px solid #e2e8f0;
  border-radius: 8px;
  font-size: 16px;
  transition: all 0.3s ease;
  background: white;
}

.admin-search-input:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

/* Table Styles */
.admin-table-container {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  overflow: hidden;
  border: 1px solid #e2e8f0;
}

.admin-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 14px;
}

.admin-table thead {
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
}

.admin-table th {
  padding: 16px 12px;
  text-align: left;
  font-weight: 600;
  color: #475569;
  border-bottom: 2px solid #e2e8f0;
  font-size: 13px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.admin-table td {
  padding: 16px 12px;
  border-bottom: 1px solid #f1f5f9;
  color: #334155;
  vertical-align: middle;
}

.admin-table tbody tr {
  transition: all 0.2s ease;
}

.admin-table tbody tr:hover {
  background-color: #f8fafc;
  transform: scale(1.01);
}

/* Status Badges */
.status-badge {
  display: inline-block;
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.status-active {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  box-shadow: 0 2px 4px rgba(16, 185, 129, 0.3);
}

.status-inactive {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: white;
  box-shadow: 0 2px 4px rgba(239, 68, 68, 0.3);
}

.status-pending {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: white;
  box-shadow: 0 2px 4px rgba(245, 158, 11, 0.3);
}

.status-approved {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  box-shadow: 0 2px 4px rgba(16, 185, 129, 0.3);
}

.status-rejected {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: white;
  box-shadow: 0 2px 4px rgba(239, 68, 68, 0.3);
}

.status-cancelled {
  background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
  color: white;
  box-shadow: 0 2px 4px rgba(107, 114, 128, 0.3);
}

.status-default {
  background: linear-gradient(135deg, #9ca3af 0%, #6b7280 100%);
  color: white;
  box-shadow: 0 2px 4px rgba(156, 163, 175, 0.3);
}

/* Action Buttons */
.admin-actions {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.admin-btn {
  padding: 8px 16px;
  border: none;
  border-radius: 6px;
  font-size: 12px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.admin-btn-edit {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: white;
  box-shadow: 0 2px 4px rgba(245, 158, 11, 0.3);
}

.admin-btn-edit:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 8px rgba(245, 158, 11, 0.4);
}

.admin-btn-delete {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: white;
  box-shadow: 0 2px 4px rgba(239, 68, 68, 0.3);
}

.admin-btn-delete:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 8px rgba(239, 68, 68, 0.4);
}

.admin-btn-toggle {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  color: white;
  box-shadow: 0 2px 4px rgba(139, 92, 246, 0.3);
}

.admin-btn-toggle:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 8px rgba(139, 92, 246, 0.4);
}

/* Modal Styles */
/* Alias legacy modal class names used in pages to the admin styles */
.modal-overlay,
.admin-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4px);
}

.modal-content,
.admin-modal {
  background: white;
  border-radius: 18px;
  width: min(720px, 92vw);
  max-width: 720px;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 24px 45px rgba(15, 23, 42, 0.18);
  animation: modalSlideIn 0.3s ease;
  border: 1px solid #e2e8f0;
}

.admin-modal--wide {
  width: min(840px, 95vw);
  max-width: 840px;
}

.modal-content.large {
  width: min(900px, 96vw);
  max-width: 900px;
}

.modal-content form {
  padding: 0 32px 32px 32px;
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.modal-content form .form-grid {
  margin-top: 4px;
}

.modal-content form .form-group,
.modal-content form .admin-form-group {
  margin-bottom: 0;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-20px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-header,
.admin-modal-header {
  padding: 24px 24px 0 24px;
  border-bottom: 1px solid #e2e8f0;
  margin-bottom: 24px;
}

/* Close button (x) in modal header */
.close-btn {
  background: transparent;
  border: none;
  color: #6b7280;
  font-size: 20px;
  line-height: 1;
  cursor: pointer;
  padding: 6px 10px;
  border-radius: 6px;
  transition: background 0.2s ease, color 0.2s ease, transform 0.1s ease;
}

.close-btn:hover {
  background: #f3f4f6;
  color: #111827;
  transform: translateY(-1px);
}

.admin-modal-title {
  font-size: 20px;
  font-weight: 700;
  color: #1e293b;
  margin: 0 0 16px 0;
}

.admin-modal-body {
  padding: 0 32px 32px 32px;
}

/* Form Styles */
.form-grid,
.admin-form {
  display: grid;
  gap: 20px;
}

.admin-form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24px;
}

.form-group,
.admin-form-group {
  display: flex;
  flex-direction: column;
}

.admin-form-label {
  font-weight: 600;
  color: #374151;
  margin-bottom: 8px;
  font-size: 14px;
}

/* Inputs */
.form-group input,
.form-group select,
.form-group textarea,
.admin-form-input,
.admin-form-select,
.admin-form-textarea {
  padding: 12px 16px;
  border: 2px solid #e2e8f0;
  border-radius: 8px;
  font-size: 14px;
  transition: all 0.3s ease;
  background: white;
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus,
.admin-form-input:focus,
.admin-form-select:focus,
.admin-form-textarea:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.admin-form-textarea {
  resize: vertical;
  min-height: 80px;
}

.admin-checkbox-group {
  display: flex;
  align-items: center;
  gap: 8px;
}

.admin-checkbox {
  width: 18px;
  height: 18px;
  accent-color: #667eea;
}

.criteria-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 12px;
}

.criteria-row {
  background: #f8fafc;
  border: 1px dashed #cbd5f5;
  border-radius: 12px;
  padding: 12px 16px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.criteria-row__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.criteria-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  align-items: center;
}

.criteria-thumbnail {
  width: 72px;
  height: 72px;
  object-fit: cover;
  border-radius: 8px;
  border: 1px solid #e2e8f0;
}

.criteria-link {
  font-weight: 600;
  color: #4f46e5;
  text-decoration: underline;
}

.admin-alert-warning {
  background: #fef3c7;
  border: 1px solid #facc15;
  color: #78350f;
  padding: 12px 16px;
  border-radius: 10px;
  margin-bottom: 16px;
  font-size: 14px;
}

/* Modal Footer */
.modal-footer,
.admin-modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 12px;
  padding: 24px;
  border-top: 1px solid #e2e8f0;
  background: #f8fafc;
  border-radius: 0 0 12px 12px;
}

.btn,
.btn-secondary,
.admin-btn-cancel {
  background: #6b7280;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 6px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn:hover,
.btn-secondary:hover,
.admin-btn-cancel:hover {
  background: #4b5563;
  transform: translateY(-1px);
}

.btn-primary,
.admin-btn-submit {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 6px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
}

.btn-primary:hover,
.admin-btn-submit:hover {
  transform: translateY(-1px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.6);
}

/* Pagination */
.admin-pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8px;
  margin-top: 24px;
  padding: 16px;
}

.admin-pagination-btn {
  padding: 8px 16px;
  border: 2px solid #e2e8f0;
  background: white;
  color: #475569;
  border-radius: 6px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.admin-pagination-btn:hover:not(:disabled) {
  border-color: #667eea;
  color: #667eea;
  transform: translateY(-1px);
}

.admin-pagination-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.admin-pagination-info {
  padding: 8px 16px;
  color: #64748b;
  font-weight: 600;
}

/* Loading State */
.admin-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40px;
  color: #64748b;
  font-size: 16px;
}

.admin-spinner {
  width: 24px;
  height: 24px;
  border: 3px solid #e2e8f0;
  border-top: 3px solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 12px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Responsive Design */
@media (max-width: 768px) {
  .admin-container {
    padding: 16px;
  }
  
  .admin-header {
    flex-direction: column;
    gap: 16px;
    text-align: center;
  }
  
  .admin-title {
    font-size: 24px;
  }
  
  .admin-table-container {
    overflow-x: auto;
  }
  
  .admin-table {
    min-width: 600px;
  }
  
  .admin-form-row {
    grid-template-columns: 1fr;
  }
  
  .admin-modal,
  .modal-content {
    width: 95%;
    margin: 16px;
    border-radius: 14px;
  }

  .admin-modal-body {
    padding: 0 20px 20px;
  }

  .modal-content form {
    padding: 0 20px 24px 20px;
  }
  
  .admin-actions {
    flex-direction: column;
  }
  
  .admin-btn {
    width: 100%;
    text-align: center;
  }
}

/* Special styling for certification levels */
.certification-badge {
  display: inline-block;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.certification-junior {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #1e40af;
}

.certification-senior {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  color: #92400e;
}

.certification-expert {
  background: linear-gradient(135deg, #e9d5ff 0%, #ddd6fe 100%);
  color: #7c2d12;
}

/* Code styling for IDs */
.admin-code {
  font-family: 'Courier New', monospace;
  background: #f1f5f9;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 12px;
  color: #475569;
}

/* Print Styles */
@media print {
  @page {
    size: A4;
    margin: 1cm;
  }

  body {
    font-size: 12pt;
  }

  .print\:break-inside-avoid {
    break-inside: avoid;
  }

  .print\:mb-4 {
    margin-bottom: 1rem;
  }

  .print\:border {
    border: 1px solid #000;
  }

  /* Hide everything except print content */
  body > *:not(.print-preview) {
    display: none;
  }
}
